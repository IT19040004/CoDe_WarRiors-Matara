            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@color/textBackground"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@color/textBackground"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@color/textBackground"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@color/textBackground"
